{
  "lineEnds": {
    "leftCurly": "after",
    "emptyCurly": "noBreak",
    "rightCurly": "both"
  },
  "sameLine": {
    "caseBody": "next",
    "tryCatch": "same",
    "ifBody": "same",
    "ifElse": "same",
    "elseBody": "same",
    "forBody": "same",
    "whileBody": "same",
    "comprehensionFor": "same"
  },
  "emptyLines": {
    "finalNewline": true,
    "lineCommentsBetweenFunctions": "none",
    "interfaceEmptyLines": {
      "beginType": 1
    }
  },
  "wrapping": {
    "arrayWrap": {
      "rules": [
        {
          "conditions": [{ "cond": "totalItemLength <= n", "value": 80 }],
          "type": "noWrap"
        },
        {
          "conditions": [{ "cond": "itemCount >= n", "value": 10 }],
          "type": "onePerLine"
        },
        {
          "conditions": [{ "cond": "anyItemLength >= n", "value": 30 }],
          "type": "onePerLine"
        },
        {
          "conditions": [{ "cond": "itemCount >= n", "value": 4 }],
          "type": "onePerLine"
        }
      ]
    },
    "callParameter": {
      "defaultWrap": "noWrap",
      "rules": [
        {
          "conditions": [{ "cond": "itemCount <= n", "value": 7 }],
          "type": "fillLine"
        },
        {
          "conditions": [{ "cond": "totalItemLength >= n", "value": 100 }],
          "type": "onePerLine"
        },
        {
          "conditions": [{ "cond": "anyItemLength >= n", "value": 100 }],
          "type": "onePerLine"
        },
        {
          "conditions": [{ "cond": "lineLength >= n", "value": 80 }],
          "type": "onePerLine"
        }
      ]
    }
  },
  "whitespace": {
    "arrowFunctionsPolicy": "around",
    "functionTypeHaxe3Policy": "around",
    "functionTypeHaxe4Policy": "around",
    "ifPolicy": "before",
    "parenConfig": {
      "ifConditionParens": {
        "closingPolicy": "around",
        "openingPolicy": "after"
      }
    },
    "colonPolicy": "around",
    "caseColonPolicy": "onlyAfter",
    "objectFieldColonPolicy": "around",
    "typeHintColonPolicy": "around",
    "typeCheckColonPolicy": "around",
    "ternaryPolicy": "around"
  }
}
